server=https://<%= @wavefront_server %>/api/
hostname=<%= @hostname %>
token=<%= @wavefront_token %>

pushListenerPorts=2878
pushFlushMaxPoints=40000
pushFlushInterval=1000
pushBlockedSamples=5
pushLogLevel=SUMMARY
pushValidationLevel=NUMERIC_ONLY
ephemeral=true

idFile=/var/wavefront/.wavefront_id

buffer=/var//wavefront/buffer
retryThreads=4

agentMetricsPointTags=dc=<%= @dc %>,env=<%= @environment %>,product=websites,platform=<%= @platform %>

#whitelistRegex=^(production|stage).*
#blacklistRegex=^(qa|development|test).*
#
filebeatPort=5044
logsIngestionConfigFile=/config/wavefront/logsIngestion.yaml
preprocessorConfigFile=/config/wavefront/preprocessor_rules.yaml
