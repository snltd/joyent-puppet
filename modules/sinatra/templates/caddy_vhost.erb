<%= @params['server_name'] %> {
  root /var/caddy/vhost/<%= @site %>

<% if @environment == 'production'-%>
  tls rob@sysdef.xyz {
    dns ns1
  }
<% else -%>
  tls off
<% end -%>

  log / <%= File.join('/var/log/caddy', "#{@site}_access.log") %> "{hostonly} {remote} [{when}] \"{method} {path} {proto}\" {status} {size} {latency_ms}" {
    rotate_size 50
    rotate_compress
    rotate_keep 5
    except /robots.txt
    except /_health
    except /i/*
    except /favicon.ico
    except /css/*
  }

  errors <%= File.join('/var/log/caddy/', "#{@site}_error.log") %> {
    rotate_size 50
    rotate_keep 5
    rotate_compress
  }

  proxy / http://localhost:<%= @params['port'] %> {
  }
}
