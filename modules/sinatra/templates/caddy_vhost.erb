<%= @params['server_name'] %> {
  root /var/caddy/vhost/<%= @site %>
  <% if @environment != 'production' %>
  tls off
  <% else %>
  tls rob@sysdef.xyz
  <% end %>
  log <%= File.join('/var/log/caddy', "#{@site}.access.log") %> {
    rotate_size 50
    rotate_compress
    rotate_keep 5
  }

  proxy / http://localhost:<%= @params['port'] %> {
  }
}
