[server]

handlers = diamond.handler.wavefront.WavefrontHandler
user =
group =
pid_file = /tmp/diamond.pid
collectors_path = <%= @diamond_prefix %>/share/sunos-diamond-collectors/collectors/,<%= @diamond_prefix %>/share/diamond/collectors

[handlers]
keys = rotated_file

[[default]]
[[WavefrontHandler]]
host = <%= @wavefront_endpoint %>
timeout = 15

[collectors]
[[default]]
hostname_method = uname_short
path_suffix = <%= @metric_suffix %>
interval = 10

[[ SmfSvcCollector ]]
enabled = True
metrics_blacklist = disabled
interval = 20

[[ SmartOSZoneCollector ]]
enabled = True

[[ SunOSNetworkCollector ]]
enabled = True
fields = obytes64,rbytes64

[[ SunOSProcCollector ]]
enabled = True

[loggers]
keys = root

[formatters]
keys = default

[logger_root]
level = INFO
handlers = rotated_file
propagate = 1

[handler_rotated_file]
class = handlers.TimedRotatingFileHandler
level = INFO
formatter = default
args = ('/var/log/diamond/diamond.log', 'midnight', 1, 7)

[formatter_default]
format = [%(asctime)s] [%(threadName)s] %(message)s
datefmt =
