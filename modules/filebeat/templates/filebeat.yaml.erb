---

filebeat.prospectors:
- input_type: log
  paths:
    - '/var/log/caddy/*/access.log'
  tail_files: true
  registry_file: /var/filebeat/registry
  close_after: 48h

output.logstash:
  hosts:
    - <%= @wavefront_endpoint %>:5044

logging:
  level: info
  to_syslog: false
  to_files: true
  files:
    path: /var/log/filebeat
    name: filebeat.log
    rotateeverybytes: 10485760
    keepfiles: 7

path.data: /var/filebeat
